    {
      "name": "WebSocket",
      "item": [
        {
          "name": "Connect (WS)",
          "description": "Connect to the WebSocket and then send messages from Postman's WS UI.\n\nExamples:\njoin_queue: {\"type\":\"join_queue\",\"payload\":{}}\nmove: {\"type\":\"move\",\"payload\":{\"game_id\":\"<uuid>\",\"position\":0}}\nchat: {\"type\":\"chat\",\"payload\":{\"game_id\":\"<uuid>\",\"message\":\"hi\"}}\nresign: {\"type\":\"resign\",\"payload\":{\"game_id\":\"<uuid>\"}}\ndraw_offer: {\"type\":\"draw_offer\",\"payload\":{\"game_id\":\"<uuid>\"}}\ndraw_accept: {\"type\":\"draw_accept\",\"payload\":{\"game_id\":\"<uuid>\"}}\ndraw_decline: {\"type\":\"draw_decline\",\"payload\":{\"game_id\":\"<uuid>\"}}\nsync: {\"type\":\"sync\",\"payload\":{}}",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{wsBaseUrl}}/ws?token={{token}}",
              "host": ["{{wsBaseUrl}}"],
              "path": ["ws"],
              "query": [
                { "key": "token", "value": "{{token}}" }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "wsBaseUrl", "value": "ws://localhost:8080" },
    { "key": "token", "value": "" },
    { "key": "user_id", "value": "" }
  ]
